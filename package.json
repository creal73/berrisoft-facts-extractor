    "command-line-usage": "^5.0.5",
    "jest": "^23.6.0",
    "parcel-bundler": "^1.10.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  }
