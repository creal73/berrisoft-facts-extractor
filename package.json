{
  "name": "berrisoft-facts-extractor",
  "version": "1.0.0",
  "description": "Tools related to Berrisoft Facts",
  "main": "dist/index.js",
  "bin": {
    "bfx": "./bin/bfx"
  },
  "scripts": {
    "build": "parcel build index.ts --target node",
    "build:dev": "parcel build index.ts --target node --no-minify",
    "prepublish": "npm run clean && npm run build",
    "test": "jest",
    "test:dev": "jest --watch",
    "clean": "rm -rf *.js *.d.ts *.tgz ./dist",
    "prettier": "npx prettier --write index.ts"
  },
  "author": "Alexandre Koelsch",
  "license": "ISC",
  "devDependencies": {
    "@types/command-line-args": "5.0.0",
    "@types/command-line-usage": "5.0.1",
    "@types/jest": "23.3.14",
    "@types/node": "10.17.2",
    "command-line-args": "5.1.1",
    "command-line-usage": "5.0.5",
    "jest": "23.6.0",
    "parcel-bundler": "1.12.4",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "typescript": "3.6.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/extractor.ts",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}